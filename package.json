{
  "name": "frost-remnands-rpg",
  "author": "Novout",
  "description": "Aplicação Desktop de Frost Remnands RPG",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "vue-cli-service electron:build",
    "serve": "vue-cli-service electron:serve",
    "lint": "yarn lint:vue && yarn lint:style",
    "lint:vue": "vue-cli-service lint",
    "lint:style": "stylelint src/**/*.css --fix --ignore-path .gitignore",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten"
  },
  "main": "background.js",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/vue-fontawesome": "3.0.0-1",
    "@vueuse/core": "^4.0.0-beta.40",
    "autoprefixer": "^9.0.0",
    "core-js": "^3.6.5",
    "electron-drag": "^2.0.0",
    "fs": "^0.0.1-security",
    "pinia": "^2.0.0-alpha.5",
    "postcss": "^8.1.1",
    "postcss-utilities": "^0.8.4",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-rc.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@vue/babel-plugin-jsx": "^1.0.0-rc.3",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "babel-eslint": "^10.1.0",
    "electron": "^9.0.0",
    "electron-devtools-installer": "^3.1.0",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "pretty-quick": "^3.1.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "src/**/*.css": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
